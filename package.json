{
  "name": "voter-node",
  "version": "0.0.1",
  "description": "backend api for a voting app",
  "main": "server.js",
  "scripts": {
    "server": "NODE_PATH=./ nodemon server.js",
    "start": "NODE_PATH=./ node server.js",
    "test-watch": "NODE_PATH=./ nodemon --exec 'npm test'",
    "test": "jest --runInBand",
    "all_tests": "jest --all"
  },
  "author": "Gabriel Grover",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^5.1.4",
    "faker": "^4.1.0",
    "jest": "^22.4.3",
    "node-mocks-http": "^1.5.8",
    "nodemon": "^1.17.2",
    "supertest": "^3.2.0"
  },
  "dependencies": {
    "await-to-js": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "jest-environment-node": "^23.2.0",
    "jsonwebtoken": "^8.2.0",
    "lodash": "^4.17.5",
    "mongodb": "^3.0.4",
    "mongodb-memory-server": "^1.8.0",
    "mongoose": "^5.0.11",
    "morgan": "^1.9.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": false,
    "coverageReporters": [
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  }
}
